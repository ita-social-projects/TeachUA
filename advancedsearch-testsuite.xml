<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test suite of basic functionality">
    <parameter name="mode" value="headless"/>
    <test name="Find clubs by location" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findClubsByLocationTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find clubs by location and district" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findClubAfterAddingDistrictTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find clubs by location, district, and nearest metro station" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findClubsSelectingMetroStationTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find clubs that are available remotely" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findRemoteClubs" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find clubs by category" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findClubsUsingCategoriesCheckbox" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find clubs with valid child age" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="validDataForChildAgeTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Check if all club parameters are present" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="allClubParametersPresenceTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Check if all mandatory center parameters are present and others are disabled" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="deactivateExtraCenterParametersTest" />
                </methods>
            </class>
        </classes>
    </test>
</suite>