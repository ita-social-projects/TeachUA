<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test suite of advanced search functionality">
    <parameter name="mode" value="headless"/>
    <test name="Find clubs by city" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findClubsByLocationTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find clubs by city and district" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findClubAfterAddingDistrictTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find clubs by city and the nearest metro station" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findClubsSelectingMetroStationTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find centers by city" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findCentersByLocationTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find centers by city and district" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findCenterSelectingDistrictTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find centers by city and the nearest metro station" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findCenterUsingMetroStationTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find clubs that are available remotely" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findRemoteClubs" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find clubs by category" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findClubsUsingCategoriesCheckbox" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find clubs with valid child age" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="validDataForChildAgeTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Check if all club parameters are present" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="allClubParametersPresenceTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Check if all mandatory center parameters are present and others are disabled" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="deactivateExtraCenterParametersTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Display clubs in list view" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="displayClubsAsListTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Display centers in list view" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="displayCentersAsListTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Sort clubs by rating" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="sortClubsByRatingTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Sort clubs alphabetically" enabled="true">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="sortClubsAlphabeticallyTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Sort centers by rating" enabled="false">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findCenterSortedByRatingTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Sort centers alphabetically" enabled="false">
        <classes>
            <class name="com.softserve.edu.test.ui.clubs.AdvancedSearchTest">
                <methods>
                    <include name="findCenterSortedAlphabeticallyTest" />
                </methods>
            </class>
        </classes>
    </test>
</suite>